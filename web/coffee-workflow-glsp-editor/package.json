{
  "name": "coffee-workflow-glsp-editor",
  "version": "0.7.0",
  "keywords": [
    "theia-extension"
  ],
  "description": "GLSP editor integration for coffee models",
  "license": "(EPL-2.0 OR GPL-2.0 WITH Classpath-exception-2.0)",
  "files": [
    "lib",
    "src",
    "build"
  ],
  "author": {
    "name": "EclipseSource"
  },
  "dependencies": {
    "@eclipse-glsp/client": "next",
    "@eclipse-glsp-examples/workflow-sprotty": "next",
    "@eclipse-glsp/theia-integration": "next",
    "@eclipse-emfcloud/modelserver-theia": "next",
    "@theia/core": "latest",
    "@theia/editor": "latest",
    "@theia/filesystem": "latest",
    "@theia/languages": "latest",
    "@theia/monaco": "latest",
    "@theia/workspace": "latest",
    "@types/node": "latest"
  },
  "devDependencies": {
    "rimraf": "^2.6.1",
    "tslint": "^5.5.0",
    "typescript": "3.4.3"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf lib",
    "build": "tsc && yarn run lint",
    "lint": "tslint -c ../tslint.json --project ./tsconfig.json",
    "download-server": "cd ./scripts && ./download-server.sh",
    "watch": "tsc -w"
  },
  "theiaExtensions": [
    {
      "frontend": "lib/browser/frontend-module",
      "backend": "lib/node/backend-module"
    }
  ]
}