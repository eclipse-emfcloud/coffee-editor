{
  "name": "coffee-workflow-analyzer-editor",
  "displayName": "coffee-workflow-analyzer-editor",
  "publisher": "EclipseSource",
  "repository": "https://github.com/eclipse-emfcloud/coffee-editor",
  "license": "(EPL-2.0 OR MIT)",
  "version": "0.7.0",
  "engines": {
    "vscode": "*"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./lib/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "wfconfig",
        "extensions": [
          ".wfconfig",
          ".wf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "wfconfig",
        "scopeName": "text.wfconfig",
        "path": "./wfconfig.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "prepare": "yarn clean && yarn build",
    "clean": "rimraf lib",
    "lint": "eslint -c .eslintrc.js --ext .ts,.tsx ./src",
    "build": "tsc && yarn package",
    "watch": "tsc -w",
    "package": "vsce package && copyfiles coffee-workflow-analyzer-editor-0.7.0.vsix ../../web/browser-app/plugins/"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "@types/glob": "^7.1.3",
    "@types/node": "12.x",
    "@types/vscode": "1.49.0",
    "eslint": "^6.8.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-react": "^7.20.3",
    "typescript": "^3.9.2",
    "rimraf": "^2.6.1",
    "vsce": "^1.100.1",
    "copyfiles": "2.3.0"
  },
  "dependencies": {
    "vscode-jsonrpc": "^5.0.0",
    "vscode-languageclient": "^6.1.3"
  }
}